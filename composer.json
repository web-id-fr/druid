{
    "name": "webid/druid",
    "version": "0.1",
    "description": "Laravel Filament based CMS",
    "type": "library",
    "authors": [
        {
            "name": "Web ID team",
            "email": "team@web-id.fr"
        }
    ],
    "require": {
        "php": "^8.2",
        "filament/filament": "^3.1",
        "filament/forms": "^3.1",
        "laravel/framework": "^10",
        "webmozart/assert": "^1.11"
    },
    "require-dev": {
        "nunomaduro/larastan": "^2.8",
        "laravel/pint": "^1.13",
        "orchestra/testbench": "^8.20",
        "phpunit/phpunit": "^9.5.10",
        "laravel/legacy-factories": "^1.0.4"
    },
    "autoload": {
        "psr-4": {
            "Webid\\Druid\\": "src/",
            "Webid\\Druid\\App\\": "src/app/",
            "Webid\\Druid\\Database\\Factories\\": "src/database/factories/"
        },
        "files": [
            "src/app/Helpers/helpers.php",
            "src/app/Helpers/Multilingual.php",
            "src/app/Helpers/NavigationMenus.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "src/app/",
            "Webid\\Druid\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Webid\\Druid\\DruidServiceProvider"
            ]
        }
    },
    "scripts": {
        "pint": "pint",
        "phpstan": "phpstan --memory-limit=4G",
        "lint": [
            "@php vendor/bin/pint",
            "@php vendor/bin/phpstan analyse"
        ],
        "test": [
            "@php vendor/bin/phpunit"
        ]
    }
}
